{
  "name": "react-chrome-connect",
  "version": "0.0.1",
  "description": "Create hooks for connecting to a Chrome messaging port in React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc -b",
    "preversion": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myleslinder/react-chrome-connect"
  },
  "homepage": "https://github.com/myleslinder/react-chrome-connect",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "dts": true,
    "format": [
      "esm",
      "cjs"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "Myles Linder",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.196",
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.18",
    "prettier": "2.7.1",
    "react": "^18.2.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
